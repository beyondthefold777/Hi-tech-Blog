<!-- views/dashboard.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-gray-700 to-gray-900 text-blue-400 min-h-screen flex items-center justify-center">
  <div class="container mx-auto p-4">
    <section class="mb-6">
      <h2 class="text-2xl font-bold">Your Dashboard</h2>
      <h3 class="text-xl">Welcome, {{username}}.</h3>
    </section>

    {{#if blogs.length}}
    <section class="mb-6">
      <h2 class="text-2xl font-bold">Blogs</h2>
      {{#each blogs as |blog|}}
      <a href="/api/edit/{{blog.id}}" class="block mb-2">
        <h3 class="text-lg">{{blog.title}} - Posted on {{format_date blog.date}}</h3>
      </a>
      {{/each}}
    </section>
    {{/if}}

    <section>
      <button id="new_button" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 mb-4">New Blog +</button>
      <form class="new_form hidden bg-gray-800 p-4 rounded" id="new_form">
        <h2 class="text-2xl font-bold mb-4">New Blog</h2>
        <label for="new_title" class="block mb-2">Title</label>
        <input id="new_title" type="text" class="w-full p-2 mb-4 rounded text-gray-900" />
        <label for="new_content" class="block mb-2">Content</label>
        <textarea id="new_content" name="new" type="text" form="new_form" class="w-full p-2 mb-4 rounded text-gray-900"></textarea>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Create</button>
      </form>
    </section>
  </div>
  <script src="/Hi-tech-Blog/public/js/new.js"></script>
  <script>
     // Toggle visibility of the new blog form
    document.getElementById('new_button').addEventListener('click', function() {
      document.querySelector('.new_form').classList.toggle('hidden');
    });
  </script>
</body>
</html>
