<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <nav class="bg-gradient-to-r from-gray-700 to-gray-800 text-white py-4">
    <div class="container mx-auto flex justify-between items-center px-4">
      <div>
        <a href="/" class="text-lg font-bold">Homepage</a>
      </div>
      <div class="space-x-4">
        <a href="/" class="hover:text-gray-300">Homepage</a>
        <a href="/dashboard" class="hover:text-gray-300">Dashboard</a>
        <a href="/signup" class="hover:text-gray-300">Sign up</a>
        <a href="/login" id="loginBtn" class="hover:text-gray-300">Log in</a>
        <a href="/logout" id="logoutBtn" class="hover:text-gray-300 hidden">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container mx-auto mt-8 px-4">
    {{#each blogs as |blog|}}
      <article class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-bold mb-2"><a href="/blog/{{blog.id}}" class="text-blue-500 hover:text-blue-700">{{blog.title}}</a></h2>
        <h3 class="text-gray-600 mb-4">Posted by {{blog.user.username}} on {{format_date blog.date}}</h3>
        <p class="text-gray-800">{{blog.content}}</p>
      </article>
    {{/each}}
  </main>

  <script>
    // This script will be replaced with actual logic to check login status
    document.addEventListener('DOMContentLoaded', () => {
      const loginBtn = document.getElementById('loginBtn');
      const logoutBtn = document.getElementById('logoutBtn');

      // Example logic to check if user is logged in
      const isLoggedIn = false; // Replace with actual check

      if (isLoggedIn) {
        loginBtn.classList.add('hidden');
        logoutBtn.classList.remove('hidden');
      } else {
        loginBtn.classList.remove('hidden');
        logoutBtn.classList.add('hidden');
      }
    });
  </script>
</body>
</html>
